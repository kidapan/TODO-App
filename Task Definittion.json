{
  "family": "express-demo-app-taskdef",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::620933121490:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "containerDefinitions": [
    {
      "name": "todo",
      "image": "REPLACE_IMAGE",  // GitHub Actions で差し替えられる
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DB_NAME",
          "value": "todo_db"
        },
        {
          "name": "DB_HOST",
          "value": "database-1-instance-1.ch5hh8sgjvwy.ap-northeast-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "admin"
        },
        {
          "name": "DB_PASSWORD",
          "value": "testtesttest"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/express-demo-app-taskdef",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
